<?xml version="1.0" encoding="UTF-8"?>
<phpunit xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:noNamespaceSchemaLocation="vendor/phpunit/phpunit/phpunit.xsd"
         bootstrap="vendor/autoload.php"
         colors="true"
         processIsolation="false"
         stopOnFailure="false"
         cacheDirectory=".phpunit.cache"
         backupGlobals="false">
    <testsuites>
        <testsuite name="Unit">
            <directory suffix="Test.php">./tests/Unit</directory>
        </testsuite>
        <testsuite name="Feature">
            <directory suffix="Test.php">./tests/Feature</directory>
        </testsuite>
        <testsuite name="Repositories">
            <directory suffix="Test.php">./tests/Unit/Repositories</directory>
        </testsuite>
        <testsuite name="Services">
            <directory suffix="Test.php">./tests/Unit/Services</directory>
        </testsuite>
        <testsuite name="Controllers">
            <directory suffix="Test.php">./tests/Feature/Controllers</directory>
        </testsuite>
        <testsuite name="Middleware">
            <directory suffix="Test.php">./tests/Unit/Middleware</directory>
        </testsuite>
        <testsuite name="Requests">
            <directory suffix="Test.php">./tests/Unit/Requests</directory>
        </testsuite>
    </testsuites>
    <source>
        <include>
            <directory suffix=".php">./app</directory>
        </include>
    </source>
    <php>
        <env name="APP_ENV" value="testing"/>
        <env name="BCRYPT_ROUNDS" value="4"/>
        <env name="CACHE_DRIVER" value="array"/>
        <env name="DB_CONNECTION" value="sqlite"/>
        <env name="DB_DATABASE" value=":memory:"/>
        <env name="MAIL_MAILER" value="array"/>
        <env name="QUEUE_CONNECTION" value="sync"/>
        <env name="SESSION_DRIVER" value="array"/>
        <env name="TELESCOPE_ENABLED" value="false"/>
        <env name="LOG_CHANNEL" value="single"/>
        <env name="LOG_LEVEL" value="debug"/>
        <env name="LOG_DEPRECATIONS_CHANNEL" value="null"/>
        <env name="LOG_MAX_FILES" value="5"/>
        <env name="BROADCAST_DRIVER" value="log"/>
        <env name="FILESYSTEM_DISK" value="local"/>
        <env name="HASH_DRIVER" value="bcrypt"/>
        <env name="MEMCACHED_HOST" value="127.0.0.1"/>
        <env name="REDIS_HOST" value="127.0.0.1"/>
        <env name="REDIS_PASSWORD" value="null"/>
        <env name="REDIS_PORT" value="6379"/>
        <env name="MAIL_FROM_ADDRESS" value="hello@example.com"/>
        <env name="MAIL_FROM_NAME" value="Example"/>
        <env name="AWS_ACCESS_KEY_ID" value=""/>
        <env name="AWS_SECRET_ACCESS_KEY" value=""/>
        <env name="AWS_DEFAULT_REGION" value="us-east-1"/>
        <env name="AWS_BUCKET" value=""/>
        <env name="AWS_USE_PATH_STYLE_ENDPOINT" value="false"/>
        <env name="PULSE_ENABLED" value="false"/>
        <env name="UPLOAD_MAX_FILESIZE" value="10M"/>
        <env name="POST_MAX_SIZE" value="10M"/>
        <env name="MAX_EXECUTION_TIME" value="300"/>
        <env name="MEMORY_LIMIT" value="512M"/>
    </php>
    <coverage>
        <include>
            <directory suffix=".php">./app</directory>
        </include>
        <exclude>
            <directory suffix=".php">./app/Console</directory>
            <directory suffix=".php">./app/Exceptions</directory>
            <directory suffix=".php">./app/Providers</directory>
            <file>./app/Models/Artisan.php</file>
        </exclude>
        <report>
            <html outputDirectory="coverage"/>
            <text outputFile="coverage.txt"/>
        </report>
    </coverage>
</phpunit>
